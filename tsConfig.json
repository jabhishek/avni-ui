{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "jsx": "react",
    "sourceMap": false,
    "lib": [
      "es6", "dom", "dom.iterable"
    ],
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
